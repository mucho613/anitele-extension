{
  "name": "あにてれ+",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "テレビ東京の動画配信サービス「あにてれ」プレーヤーを便利にしちゃう拡張",
  "content_scripts": [
    {
      "matches": [
        "https://ch.ani.tv/episodes/*"
      ],
      "js": [
        "content-script.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "embeded-script.js"
  ],
  "permissions": [
    "https://ch.ani.tv/*"
  ]
}
